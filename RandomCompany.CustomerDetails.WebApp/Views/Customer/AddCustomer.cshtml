@model Customer
@{
    ViewData["Title"] = "AddCustomer";
}

<h1>You can add customer here</h1>
@{
    if (!string.IsNullOrEmpty(ViewBag.AlertMsg))
    {
        <span class="alert-success">@ViewBag.AlertMsg</span>
    }
}
<form method="post" asp-action="AddCustomer">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Customer</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="FirstName"></label>

                    </div>
                    <div class="col-3">
                        <label asp-for="LastName"></label>

                    </div>
                    <div class="col-3">
                        <label asp-for="Email"></label>

                    </div>
                    <div class="col-3">
                        <label asp-for="Address"></label>

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Add" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>